<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <Label contentDisplay="CENTER" layoutX="150.0" layoutY="81.0" text="Add a new feedback">
            <font>
                <Font name="System" size="38.0" />
            </font>
        </Label>

        <ImageView fitHeight="25.0" fitWidth="38.0" layoutX="109.0" layoutY="96.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../asset/pen.png" />
            </image>
        </ImageView>

        <Pane layoutX="150.0" layoutY="108.0" prefHeight="250.0" prefWidth="300.0">
            <children>
                <Label layoutX="32.0" layoutY="54.0" text="Rating :">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <Label layoutX="14.0" layoutY="86.0" text="Comment :">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>

                <Button layoutX="143.0" layoutY="214.0" mnemonicParsing="false" onMouseClicked="#addFeedback" text="Add" />
                <Label id="rating" layoutX="143.0" layoutY="38.0" prefHeight="17.0" prefWidth="80.0" />
                <Label id="comment" layoutX="143.0" layoutY="62.0" prefHeight="17.0" prefWidth="80.0" />
                <TextField id="rating" fx:id="rating" layoutX="94.0" layoutY="50.0" prefHeight="25.0" prefWidth="176.0" promptText="rate out of 5" />
                <TextArea id="comment" fx:id="comment" layoutX="94.0" layoutY="86.0" prefHeight="91.0" prefWidth="176.0" />
                <Label fx:id="error" layoutX="45.0" layoutY="177.0" prefHeight="37.0" prefWidth="233.0" textFill="RED" />
            </children>
        </Pane>
    </children>
</AnchorPane>
